extends ../../layouts/ui-kit-layout.pug
include ../../components/text-field/text-field.pug
include ../../components/ui-text/ui-text.pug
include ../../components/dropdown/dropdown.pug
include ../../components/checkbox/checkbox.pug
include ../../components/checkbox-dropdown/checkbox-dropdown.pug
include ../../components/check-buttons/check-buttons.pug
include ../../components/masked-text-field/masked-text-field.pug
include ../../components/subscription-text-field/subscription-text-field.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/perks-container/perks-container.pug
include ../../components/radio-buttons/radiobuttons.pug
include ../../components/toggle/toggle.pug
include ../../components/like/like.pug
include ../../components/rate-button/rate-button.pug
include ../../components/rich-checkbox/rich-checkbox.pug
include ../../components/commentary/commentary.pug
include ../../components/range/range.pug
include ../../components/buttons/buttons.pug
include ../../components/pagination/pagination.pug
include ../../components/bullet-list/bullet-list.pug

block scripts
    link(href=require('./form-elements.scss') rel='stylesheet')
block values
    script 
        - var textFieldArr1 = ["ui","text field","DEFAULT"]
        - var textFieldArr2 = ["ui","text field", "HOVER/FOCUS"]
        - var textFieldArr3 = ["ui","masked text field"]
        - var dateDropdown1 = ["ui","date dropdown"]
        - var dateDropdown2 = ["ui","date dropdown"]
        - var type1 = "accomodation"
        - var type2 = null
        - var inputText1 = "Выберите удобства"
        - var inputText2 = "Сколько гостей"
        - var dropdownArr1 = ["ui","dropdown", "DEFAULT"]
        - var dropdownParams1 = ["Спальни","Кровати","Ванные комнаты"]
        - var dropdownParams2 = ["Взрослые", "Дети", "Младенцы"]
        - var subscriptionText = ["ui","subscription text field"]
        - var checkboxParams = ["ui","expandable checkbox list"]
        - var checkboxArr = ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка","Телевизор","Шампунь"]
        - var richCheckboxArr = ["Ширина коридоров в номере не менее 91 см.", "На 1 этаже вас встретит специалист  и проводит до номера."]
        - var richCheckboxHeadingArr = ["Широкий коридор", "Помошник для инвалидов"]
        - var checkButtonsParams = ["ui","checkbox buttons"]
        - var checkButtonsArr = ["Можно курить","Можно с питомцами","Можно пригласить гостей (до 10 человек)"]
        - var perksArr1 = ["../../svg/perk_comfort.svg", "Комфорт", "Шумопоглощающие стены"]
        - var perksArr2 = ["../../svg/perk_conveniency.svg", "Удобство", "Окно в каждой из спален"]
        - var checkedArrFormpage = ["","checked","checked","checked","",""]
        - var checkedArrButtons = ["", "checked"," checked"]
        - var checkedArrRich = ["",""]
        - var radiobuttonParams = ["ui","radio buttons"]
        - var toggleParams1 = ["ui","toggle"]
        - var toggleParams2 = [""]
        - var likeParams1 = ["ui", "like button"]
        - var likeParams2 = [""]
        - var rateParams = ["ui", "rate button"]
        - var richParams = ["ui","rich checkbox buttons"]
        - var starAmount1 = 4;
        - var starAmount2 = 5;
        - var commentaryParams =[""]
        - var rangeParams = ["ui","range slider", "5000\u20bd - 10000\u20bd"]
        - var paginationParams = ["ui","pagination"]
        - var bulletParams = ["ui","bullet list"]
        - var bulletText = ["Нельзя с питомцами","Без вечеринок и мероприятий","Время прибытия — после 13:00, а выезд до 12:00"]
block content
    +text-field(textFieldArr1)
    +text-field(textFieldArr2)
    +dropdown(type1, dropdownArr1, inputText1, dropdownParams1, "big")
    +dropdown(type2, dropdownArr1, inputText2, dropdownParams2, "medium")
    +masked-text-field("big", textFieldArr3, "ДД.ММ.ГГГГ")
    +date-dropdown("small", dateDropdown1, dateDropdown2, "ДД.ММ.ГГГГ", "19.08.2019")
    +subscription-text-field("medium", subscriptionText)
    +checkbox-dropdown("medium", checkboxParams, checkboxArr, false, checkedArrFormpage)
    +checkbox-dropdown("medium", checkboxParams, checkboxArr, true, checkedArrFormpage)
    +perks-container(perksArr1, perksArr2)
    +cbuttons(checkButtonsParams, checkButtonsArr, checkedArrButtons)
    +radiobuttons(radiobuttonParams)
    +toggle(toggleParams1, true)
    +toggle(toggleParams2, false)
    .form-elements__like-component
        +ui-text(likeParams1)
        .form-elements__like
            .form-elements__like-container
                +like("off", 2)
            .form-elements__like-container
                +like("on", 12)
    +rate-button(rateParams, true, starAmount1)
    +rich-checkbox(richParams ,richCheckboxArr,richCheckboxHeadingArr,checkedArrRich)
    +commentary(commentaryParams, "Мурад Сарафанов","5 дней назад","Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.")
    +range(rangeParams, true)
    .buttons-ui
        .buttons-ui__text-container 
            .buttons-ui__text
                +ui-text(["ui", "buttons"])
        .buttons-ui__small
            .buttons-ui__container
                +buttons("default", "small")
            .buttons-ui__container
                +buttons("default-greyed", "small")
            .buttons-ui__container
                +buttons("hollow", "small")
            .buttons-ui__container
                +buttons("hollow-greyed", "small")
            .buttons-ui__container
                +buttons("empty", "small")
            .buttons-ui__container
                +buttons("empty-greyed", "small")
        .buttons-ui__big
            .buttons-ui__container
                +buttons("default","big", "перейти к оплате")
    +pagination(paginationParams)
    +bullet-list(bulletParams, bulletText )
block js 
    script
        include ../../components/dropdown/dropdown.js
        include ../../components/date-dropdown/date-dropdown.js
        include ../../components/checkbox/checkbox.js
        include ../../components/toggle/toggle.js
        include ../../components/like/like.js
        include ../../components/rate-button/rate-button.js
        include ../../components/range/range.js
        include ../../components/pagination/pagination.js

