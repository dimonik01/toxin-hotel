include ../dropdown-list/dropdown-list.pug
mixin dropdown(type, arrText, inputText, dropdownParams, size, isExpanded, ui = "false")
    if type == "accomodation"
        if size == "big"
            div(class="dropdown dropdown_accomodation-big")
                .dropdown__ui-container_acc
                    .dropdown__ui
                        +ui-text(arrText)
                .dropdown__container
                    .dropdown__input
                        p.dropdown__input-text(value="test") #{inputText}
                        .dropdown__expand
                    +dropdown-list(dropdownParams, size, isExpanded, type, ui)
        else
            div(class="dropdown dropdown_accomodation-medium")
                .dropdown__ui-container_acc
                    .dropdown__ui
                        +ui-text(arrText)
                .dropdown__container
                    .dropdown__input
                        p.dropdown__input-text(value="test") #{inputText}
                        .dropdown__expand
                    +dropdown-list(dropdownParams, size, isExpanded, type, ui)
    else
        if size == "big"
            div(class="dropdown dropdown_big")
                .dropdown__ui-container_big
                    .dropdown__ui
                        +ui-text(arrText)
                .dropdown__container
                    .dropdown__input
                        p.dropdown__input-text(value="test") #{inputText}
                        .dropdown__expand
                    +dropdown-list(dropdownParams, size, isExpanded, type, ui)
                        
        else
            div(class="dropdown dropdown_medium")
                .dropdown__ui-container
                    .dropdown__ui
                        +ui-text(arrText)
                .dropdown__container
                    .dropdown__input
                        p.dropdown__input-text(value="test") #{inputText}
                        .dropdown__expand
                    +dropdown-list(dropdownParams, size, isExpanded, type, ui)
