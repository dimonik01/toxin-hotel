mixin checkbox(textArr, checkedArr, headingArr = 0, font)
    - for (let i=0; i < textArr.length; i++)
        .checkbox__container
            if (checkedArr[i] != "")
                .checkbox__wrapper
                    input(class="checkbox__checkbox", type="checkbox", checked)
            else
                .checkbox__wrapper 
                    input(class="checkbox__checkbox", type="checkbox")
            .checkbox__text-container
                if (headingArr != 0)
                    label(class="checkbox__heading") #{headingArr[i]}
                    if font == "14"
                        label(class="checkbox__text") #{textArr[i]}
                    if font == "12"
                        label(class="checkbox__text_small") #{textArr[i]}
                else 
                    if font == "14"
                        label(class="checkbox__text") #{textArr[i]}
                    if font == "12"
                        label(class="checkbox__text_small") #{textArr[i]}
