extends ../../layouts/ui-kit-layout.pug
include ../../components/text-field/text-field.pug
include ../../components/ui-text/ui-text.pug
include ../../components/dropdown/dropdown.pug
include ../../components/checkbox/checkbox.pug
include ../../components/masked-text-field/masked-text-field.pug
include ../../components/subscription-text-field/subscription-text-field.pug
block scripts
    link(href=require('./form-elements.scss') rel='stylesheet')
block values
    script 
        - var textFieldArr1 = ["ui","text field","DEFAULT"]
        - var textFieldArr2 = ["ui","text field", "HOVER/FOCUS"]
        - var textFieldArr3 = ["ui","masked text field"]
        - var dateDropdown1 = ["ui","date dropdown"]
        - var type1 = "accomodation"
        - var type2 = null
        - var inputText1 = "Выберите удобства"
        - var inputText2 = "Сколько гостей"
        - var dropdownArr1 = ["ui","dropdown", "DEFAULT"]
        - var dropdownParams1 = ["Спальни","Кровати","Ванные комнаты"]
        - var dropdownParams2 = ["Взрослые", "Дети", "Младенцы"]
        - var subscriptionText = ["ui","subscription text field"]
        - var checkboxParams = ["ui","expandable checkbox list"]
block content
    +text-field(textFieldArr1)
    +text-field(textFieldArr2)
    +dropdown(type1, dropdownArr1, inputText1, dropdownParams1)
    +dropdown(type2, dropdownArr1, inputText2, dropdownParams2)
    +masked-text-field("medium", textFieldArr3, "ДД.ММ.ГГГГ")
    +masked-text-field("small", dateDropdown1, "ДД.ММ.ГГГГ")
    +masked-text-field("small", dateDropdown1, "19.08.2019")
    +subscription-text-field("medium", subscriptionText)
    +checkbox("medium", checkboxParams)
block js 
    script
        include ../../components/dropdown/dropdown.js

